<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/recents_fav_book_image"
        android:layout_width="120dp"
        android:layout_height="192dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/book_image_cover"
        android:src="@drawable/harry_potter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recents_fav_book_title"
        style="@style/textStyleMedium"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recents_fav_book_image"
        app:layout_constraintStart_toStartOf="@+id/recents_fav_book_image"
        app:layout_constraintTop_toBottomOf="@+id/recents_fav_book_image"
        app:layout_constraintVertical_bias="0.100000024"
        tools:text="Harry Potter and the Sorcerer's Stone" />

</androidx.constraintlayout.widget.ConstraintLayout>
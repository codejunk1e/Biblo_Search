<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyleMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textStyleSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textStyleBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="textStyleSearchBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">14sp</item>
    </style>
></resources>